{
  "name": "DataFlow - LeetCode Problem Tracker",
  "description": "A full-stack application for tracking LeetCode problems with CSV import/export, analytics dashboard, and progress management.",
  "services": [
    {
      "name": "dataflow-app",
      "source": ".",
      "build": {
        "builder": "NIXPACKS",
        "buildCommand": "npm run build"
      },
      "deploy": {
        "startCommand": "npm start",
        "healthcheckPath": "/health",
        "healthcheckTimeout": 300,
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10
      },
      "variables": {
        "NODE_ENV": "production"
      }
    },
    {
      "name": "postgres",
      "image": "postgres:15",
      "variables": {
        "POSTGRES_DB": "dataflow",
        "POSTGRES_USER": "postgres",
        "POSTGRES_PASSWORD": "postgres"
      }
    }
  ],
  "environments": {
    "production": {
      "variables": {
        "NODE_ENV": "production"
      }
    }
  }
}
